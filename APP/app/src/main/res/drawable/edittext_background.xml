<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- Màu nền cho EditText -->
    <solid android:color="#FFFFFF" />

    <!-- Viền có màu sắc và độ rộng đẹp hơn -->
    <stroke android:width="1dp" android:color="#8B4513" android:dashWidth="5dp" android:dashGap="5dp" />

    <!-- Bo góc mượt mà -->
    <corners android:radius="16dp" />

    <!-- Thêm bóng cho phần viền -->
    <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />

    <!-- Hiệu ứng bóng nhẹ để tạo cảm giác hiện đại -->
    <gradient
        android:startColor="#F5F5F5"
        android:endColor="#FFFFFF"
        android:angle="45"/>
</shape>